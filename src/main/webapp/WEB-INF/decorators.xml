<?xml version="1.0" encoding="ISO-8859-1"?>

<decorators defaultdir="/WEB-INF/decorators">
	<!-- Any urls that are excluded will never be decorated by Sitemesh -->
	<excludes>
		<!-- link untuk pemanggilan template (css,js) -->
		<pattern>/assets/*</pattern>
		
		<!-- New link -->
		<pattern>/user/*</pattern>
		<pattern>/role/*</pattern>

		<pattern>/biodata/*</pattern>
		<pattern>/monitoring/*</pattern>
		<pattern>/assignment/*</pattern>

		<pattern>/bootcamp_test_type/*</pattern>
		<pattern>/category/*</pattern>
		<pattern>/idle_news/*</pattern>
		<pattern>/technology/*</pattern>
		<pattern>/question/*</pattern>
		<pattern>/version/*</pattern>
		<pattern>/office/*</pattern>

	</excludes>

	<decorator name="login" page="login.jsp">
		<pattern>/login.html</pattern>
	</decorator>
	
	<decorator name="main" page="main.jsp">
		<pattern>/*</pattern>
	</decorator>

</decorators>